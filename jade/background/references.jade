unless _.isEmpty(resume.references)
  .detail#references
    .icon
      i.fs-lg.icon-thumbs-up
      span.mobile-title References

    .info
      a(href="#references")
        h4.title.text-uppercase References

      .content
        ul.list-unstyled
          - each reference_info in resume.references
            li.card.card-nested
              p
                strong
                  |#{reference_info.name}&nbsp;
                a(href=reference_info.website, target="_blank")= "[www]"
              p.text-muted
                |#{reference_info.position}
                br
                a(href="mailto:" + reference_info.email, itemprop="email")= reference_info.email

