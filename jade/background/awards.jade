unless _.isEmpty(resume.awards)
  .detail#awards
    .icon
      i.fs-lg.icon-trophy
      span.mobile-title Awards

    .info
      a(href="#awards")
        h4.title.text-uppercase Awards

      .content
        ul.list-unstyled
          - each award in resume.awards
            li.card.card-nested
              .content
                p.clear-margin(itemprop="award")
                  strong= award.title + " "

                unless _.isEmpty(award.summary)
                  p.text-muted
                    small= award.summary

                p.text-muted
                  small= award.date
